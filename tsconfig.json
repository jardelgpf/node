{
  "compilerOptions": {       
    "target": "es2020",                          //define a versão do JS
    "module": "commonjs",                        //modulo padrao do node  
    "rootDir": "./src",                          //define o diretorio de codigos ts     
    "outDir": "./dist",                          //define o diretório de transpilação (código pronto para uso)  
    "strict": true,                              //deixa a validação de tipos de forma estrita           
    "esModuleInterop": true,                     //permite importação padrão de módulos CommonJS     
    "forceConsistentCasingInFileNames": true,    //evita erros com maiusculas ou minusculas nos import
    },
    "include": ["src"], //inclui arquivos na pasta src
    "exclude": ["node_modules", "dist"] //exclui essas pastas no processo de transpilação
  }

